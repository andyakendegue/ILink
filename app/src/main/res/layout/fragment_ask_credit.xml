<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.ilink.AskCreditFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/title_ask_credit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="27sp"
            android:textStyle="bold"
            android:id="@+id/titleAskCredit" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/editAmmount"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/titleAskCredit"
            android:layout_centerHorizontal="true"
            android:hint="@string/title_ammount"
            android:layout_marginBottom="40dp"
            android:layout_alignParentEnd="false" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/button_ask_credit"
            android:id="@+id/btnAskCredit"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/first_button"
            android:textColor="#fff"
            android:layout_below="@+id/editAmmount" />

    </RelativeLayout>

</FrameLayout>
