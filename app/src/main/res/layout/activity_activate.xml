<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ilink.ActivateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saisissez le code de validation reçu"
        android:id="@+id/textValidation"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextValidation"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textValidation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combien de superviseurs dans votre réseau?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/textNombreMembres"
        android:layout_below="@+id/editTextValidation"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNombreMembres"
        android:layout_below="@+id/textNombreMembres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Combien de membres Geolocalise par superviseurs?"
        android:id="@+id/textNombreGeo"
        android:layout_below="@+id/editTextNombreMembres"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNombreGeo"
        android:layout_below="@+id/textNombreGeo"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/btnValidate"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editTextNombreGeo"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="@drawable/first_button" />
</RelativeLayout>
