<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ilink.ForgottenPasswordGeolocatedActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifiez votre mot de passe"
        android:id="@+id/textViewModifyPassword"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextPhone"
        android:layout_below="@+id/textViewModifyPassword"
        android:layout_marginTop="20dp"
        android:hint="Votre numero de telephone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword1"
        android:layout_below="@+id/editTextPhone"
        android:layout_marginTop="20dp"
        android:hint="Votre nouveau mot de passe" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword2"
        android:layout_below="@+id/editTextPassword1"
        android:layout_marginTop="20dp"
        android:hint="Saisissez Ã  nouveau le mot de passe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier le mot de passe"
        android:id="@+id/btnModifyPassword"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextPassword2"
        android:layout_marginTop="20dp"
        android:background="@drawable/second_button" />
</RelativeLayout>
